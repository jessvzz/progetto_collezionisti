<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import org.controlsfx.control.SearchableComboBox?>

<HBox xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univaq.disim.collectors.controller.AddDiskController">
   <children>
      <VBox prefHeight="412.0" prefWidth="683.0">
         <children>
            <Label fx:id="label" prefHeight="26.0" prefWidth="587.0" text="Add:">
               <font>
                  <Font size="28.0" />
               </font>
               <VBox.margin>
                  <Insets left="5.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="308.0" prefWidth="683.0">
               <children>
                  <Pane prefHeight="187.0" prefWidth="255.0">
                     <children>
                        <TextField fx:id="titleTextField" layoutX="9.0" layoutY="14.0" prefHeight="26.0" prefWidth="233.0" promptText="Title..." />
                        <ComboBox fx:id="genreComboBox" layoutX="8.0" layoutY="47.0" prefHeight="27.0" prefWidth="233.0" promptText="Genre..." />
                        <ComboBox fx:id="stateComboBox" layoutX="8.0" layoutY="117.0" prefHeight="27.0" prefWidth="233.0" promptText="State..." />
                        <TextField fx:id="yearTextField" layoutX="9.0" layoutY="83.0" prefHeight="26.0" prefWidth="233.0" promptText="Year..." />
                        <TextField fx:id="barcodeTextField" layoutX="8.0" layoutY="194.0" prefHeight="27.0" prefWidth="233.0" promptText="Barcode..." />
                        <ComboBox fx:id="formatComboBox" layoutX="8.0" layoutY="154.0" prefHeight="27.0" prefWidth="233.0" promptText="Format..." />
                     </children>
                  </Pane>
                  <VBox spacing="10" prefHeight="226.0" prefWidth="200.0" style="-fx-padding: 0 10 0 10;">
                     <children>
                        <SearchableComboBox fx:id="artistComboBox" promptText="Artist..." prefWidth="160.0" />
                        <SearchableComboBox fx:id="labelComboBox" promptText="Label..." prefWidth="160.0" />
                        <TextFlow>
    <padding>
        <Insets top="5" />
    </padding>
    <children>
        <Text fill="RED">
            <font>
                <Font size="12.0" />
            </font>
            Please note, if you can't find the artist or label among the options, you have to create them in the appropriate section.
        </Text>
    </children>
</TextFlow>

                     </children>
                  </VBox>
               </children>
            </HBox>
            <Pane prefHeight="76.0" prefWidth="683.0">
               <children>
                  <Label fx:id="errorLabel" layoutX="29.0" layoutY="154.0" prefHeight="26.0" prefWidth="187.0" textFill="#f80101" />
                  <Button fx:id="saveButton" layoutX="14.0" layoutY="39.0" mnemonicParsing="false" onAction="#saveAction" text="Save" />
                  <Button fx:id="cancelButton" layoutX="76.0" layoutY="39.0" mnemonicParsing="false" onAction="#cancelAction" text="Cancel" />
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</HBox>
