   <children>
      <Label fx:id="nameLabel" prefHeight="21.0" prefWidth="225.0" textFill="#e8b1e3">
         <font>
            <Font name="Impact" size="24.0" />
         </font>
      </Label>
      <Pane prefHeight="57.0" prefWidth="643.0">
         <children>
            <Button fx:id="addButton" layoutY="22.0" mnemonicParsing="false" onAction="#addAction" prefHeight="31.0" prefWidth="146.0" style="-fx-background-color: #d38bbc #d38bbc;" text="Add Disk" textFill="#5b5358" />
