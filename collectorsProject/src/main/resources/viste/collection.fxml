         </children>
      </Pane>
      <Pane prefHeight="261.0" prefWidth="643.0">
         <children>
            <TableView fx:id="disksTableView" layoutY="14.0" prefHeight="244.0" prefWidth="333.0">
               <columns>
                  <TableColumn fx:id="nameTableColumn" prefWidth="185.0" text="Name" />
                  <TableColumn fx:id="editTableColumn" prefWidth="75.0" text="Delete" />
                  <TableColumn fx:id="actionTableColumn" prefWidth="73.0" text="Manage" />
               </columns>
            </TableView>
         </children>
      </Pane>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
